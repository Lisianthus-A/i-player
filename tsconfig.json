{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "Utils/*": [
                "renderer/utils/*"
            ],
            "Components/*": [
                "renderer/components/*"
            ],
            "Store/*": [
                "renderer/store/*"
            ]
        }
    },
    "include": [
        "./renderer/**/*",
        "./types/global.d.ts"
    ],
    "exclude": [
        "node_modules/**"
    ]
}